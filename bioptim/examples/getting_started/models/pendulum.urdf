<?xml version="1.0"?>
<robot name="pendulum">
  <link name="base_link"/>
  <joint name="base_to_support" type="fixed">
    <parent link="base_link"/>
    <child link="support_link"/>
    <origin xyz="0 0 1" rpy="0 0 0"/>
  </joint>
  <link name="support_link">
     <visual>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </visual>
  </link>
  <joint name="pendulum_joint" type="revolute">
    <parent link="support_link"/>
    <child link="pendulum_link"/>
    <origin xyz="0 0 -0.1" rpy="0 0 0"/>
    <axis xyz="0 1 0"/> <!-- Rotation around Y -->
    <limit lower="-3.15" upper="3.15" effort="100" velocity="10"/>
    <dynamics damping="0.1"/> <!-- Add some damping -->
  </joint>
  <link name="pendulum_link">
    <inertial>
      <origin xyz="0 0 -0.5" rpy="0 0 0"/>
      <mass value="1"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.01"/>
    </inertial>
    <visual>
      <origin xyz="0 0 -0.5" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="1.0"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 0.8 1"/>
      </material>
    </visual>
     <!-- Add a frame to represent the end effector / marker -->
     <visual>
        <origin xyz="0 0 -1.0" rpy="0 0 0"/>
         <geometry><sphere radius="0.06"/></geometry>
         <material name="red"><color rgba="1 0 0 1"/></material>
     </visual>
  </link>
   <!-- Add a frame equivalent to a marker -->
    <joint name="pendulum_tip_joint" type="fixed">
        <parent link="pendulum_link"/>
        <child link="pendulum_tip"/>
        <origin xyz="0 0 -1.0" rpy="0 0 0"/>
    </joint>
    <link name="pendulum_tip"/>

</robot> 